<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tictactoeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_tictactoe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_tictactoe"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DifficultyActivity"></activity>
        <activity android:name=".NamesActivity" />
        <activity
            android:name=".AboutActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="locked" />
        <activity android:name=".SingleActivity" />
        <activity
            android:name=".ActivityMenu"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>